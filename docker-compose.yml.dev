version: "3"

services:
    app:
        image: node:alpine
        container_name: "app"
        volumes:
            - ./node:/app
        working_dir: /app
        depends_on:
            - mqtt
        ports:
            - 80:80
        command: npm run dev
        environment:
            - ifttt=bG0g3ikltIAd46otHADit0
    mqtt:
        image: eclipse-mosquitto:latest
        container_name: "mqtt"
        expose:
            - 1883
        ports:
          - "1883:1883"
volumes:
  mongo-db:
